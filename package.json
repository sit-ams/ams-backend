    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "sequelize": "^6.21.6"
  },
  "devDependencies": {
    "bunyan": "^1.8.15",
    "cross-env": "^7.0.3",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.8.1",
    "supertest": "^6.3.1"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js | bunyan",
